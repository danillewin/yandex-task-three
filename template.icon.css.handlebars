[class^="icon_"], [class*=" icon_"] {
  display: inline-block;

  height: 22px;

  vertical-align: middle;

  background-image: url(images/icon.png);
  background-repeat: no-repeat;
  background-position: center;

  line-height: 14px;
}

{{#sprites}}
.icon_{{name}} {
  background-position: {{px.offset_x}} {{px.offset_y}};
  width: {{px.width}};

}
{{/sprites}}
